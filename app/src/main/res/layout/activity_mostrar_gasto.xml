<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.gastos.MostrarGasto">
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:text="@string/titulopuntos"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titulo_mostrar_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@null"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:text="@string/proveedorpuntos"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/proveedor_mostrar_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@null"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:text="@string/valorgasto"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dinero_mostrar_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@null" />
        <TextView
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:text="@string/formadepagopuntos"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/formadepago_mostrar_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@null" />

        <TextView
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:text="@string/cuotaspuntos"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cuotas_mostrar_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@null" />
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="@string/fechapuntos"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fecha_mostrar_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="@string/ejemplofecha"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1"
            android:background="@null" />
        <TextView
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:text="@string/comentariopuntos"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/comentario_mostrar_gasto"
            android:padding="10dp"
            android:hint="@string/ejemplocomentariogasto"
            android:autofillHints="@string/ejemplocomentariogasto"
            android:background="@drawable/margen_gris"
            android:minLines="6"
            android:maxLines="15"
            android:maxLength="250"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_marginBottom="10dp"/>
        <CheckBox
            android:id="@+id/confirmar_mostrar_invitado"
            android:text="@string/pagopregunta"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>