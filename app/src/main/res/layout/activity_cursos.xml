<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cursos.Cursos">
    <LinearLayout
        android:id="@+id/cursos_ln"
        android:gravity="center|end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="95dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/buscar_cursos"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:autofillHints="@string/buscar"
                    android:hint="@string/buscar"
                    android:background="@null"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="22.5dp"
            android:layout_width="45dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_height="45dp">
            <ImageView
                android:contentDescription="@string/img"
                android:tint="#fff"
                android:padding="10dp"
                android:background="@color/colorAccent"
                android:src="@drawable/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <ProgressBar
        android:layout_below="@id/cursos_ln"
        android:layout_centerInParent="true"
        android:id="@+id/progress_cursos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </ProgressBar>
    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:layout_below="@id/cursos_ln"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:id="@+id/Cursos_recyclerview"/>
    <ImageView
        android:contentDescription="@string/imgpublicidad"
        android:id="@+id/img_publicidad_eventos"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bannerexpofiesta1"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>