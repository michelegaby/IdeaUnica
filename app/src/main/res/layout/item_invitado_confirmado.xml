<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardView.Light"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingVertical="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:transitionName="imgTransition"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/fondorosa"
                android:visibility="gone"
                app:civ_border_width="0dp"
                android:id="@+id/item_user_invitado_confirmado" />
            <TextView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/item_nombre_invitado_confirmado"
                android:text="Nombre del invitado_confirmado"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/item_user_invitado_confirmado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_tipo_invitado_confirmado"
                android:text="Familiar"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#8A000000"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@id/item_user_invitado_confirmado"
                android:layout_below="@id/item_nombre_invitado_confirmado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/item_mostrar_invitado_confirmado"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/keyboard_arrow_down" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/item_detalle_invitado_confirmado"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acompañante/s"
                android:textSize="18dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#5C5C5C"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="#5C5C5C"
                    android:layout_margin="10dp"
                    android:src="@drawable/pareja"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adulto/s:"
                        android:textColor="#5C5C5C"/>
                    <TextView
                        android:id="@+id/item_adulto_invitado_confirmado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 personas"
                        android:textColor="#8A000000"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="#5C5C5C"
                    android:paddingTop="5dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/hermanos"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niño/s:"
                        android:textColor="#5C5C5C"/>
                    <TextView
                        android:id="@+id/item_ninyo_invitado_confirmado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 personas"
                        android:textColor="#8A000000"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacto:"
                android:textSize="18dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#5C5C5C"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="#5C5C5C"
                    android:layout_margin="10dp"
                    android:src="@drawable/phone"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_celular_invitado_confirmado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(999) 345 32 45"
                        android:textColor="#5C5C5C"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Celular"
                        android:textColor="#8A000000"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/item_desconfirmar_invitado_confirmado"
                    android:paddingVertical="10dp"
                    android:layout_width="wrap_content"
                    android:text="Desconfirmar"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:foreground="?android:attr/selectableItemBackground"/>
                <Button
                    android:id="@+id/item_modificar_invitado_confirmado"
                    android:paddingVertical="10dp"
                    android:layout_width="wrap_content"
                    android:text="Modificar"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="#FFD1D1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>