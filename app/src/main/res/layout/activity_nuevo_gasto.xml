<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gastos.NuevoGasto">
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:text="Título:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:inputType="textCapSentences"
            android:id="@+id/titulo_nuevo_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@null"
            android:hint="Título..." />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#4D4B4B"/>
        <TextView
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:text="Proveedor:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:inputType="textCapSentences"
            android:id="@+id/proveedor_nuevo_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@null"
            android:hint="Proveedor..." />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#4D4B4B"/>
        <TextView
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:text="Valor(Total):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/dinero_nuevo_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="00.0"
            android:inputType="numberDecimal"
            android:background="@null" />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#4D4B4B"/>
        <TextView
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:text="Forma de pago:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/tipo_nuevo_gasto"
            android:entries="@array/Spinner_tipo_pago"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dialog"
            android:minHeight="50dp"
            android:textColor="#000000">
        </Spinner>
        <LinearLayout
            android:id="@+id/tipo_linear_nuevo_gasto"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:layout_marginVertical="10dp"
                android:text="Cuotas:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/cuotas_nuevo_gasto"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="1"
                android:inputType="number"
                android:background="@null" />
            <View
                android:layout_marginTop="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#4D4B4B"/>
            <TextView
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:text="Fecha de pago de la primera cuota:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:text="Las demas cuotas seran programadas a diferencia de un mes de esta fecha, realizando una división dentre las cuotas y el pago total."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/fecha_nuevo_gasto"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="Fecha"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1"
                android:inputType="date"
                android:background="@null" />
            <View
                android:layout_marginTop="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#4D4B4B"/>
        </LinearLayout>
        <TextView
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:text="Comentario:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:inputType="textCapSentences"
            android:id="@+id/comentario_nuevo_gasto"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="comentario..."
            android:background="@null" />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#4D4B4B"/>
    </LinearLayout>
</ScrollView>