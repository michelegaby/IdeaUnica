<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notas.NuevaNota">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/encabezado_nueva_nota"
            android:padding="15dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#4C79FB">
            <EditText
                android:id="@+id/titulo_nueva_nota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/titulo"
                android:inputType="textCapSentences"
                android:textColor="#fff"
                android:autofillHints="@string/titulo"
                android:textColorHint="#8BFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <EditText
            android:id="@+id/contenido_nueva_nota"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:hint="@string/descripcion"
            android:textColor="#000"
            android:textSize="18sp"
            android:autofillHints="@string/descripcion"
            android:singleLine="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@null"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>