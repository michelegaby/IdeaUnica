<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:orientation="vertical"
    tools:context=".menu.Revista.DetalleRevista">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarRevista"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collappRevista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:title=""
            app:contentScrim="?attr/colorAccent"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <ImageView
                android:contentDescription="@string/img"
                android:id="@+id/imgToolBar_revista"
                android:src="@drawable/fondorosa"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:background="@drawable/fondo_degradado_revista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarRevista"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="#fff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/titulo_detallerevista"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/fecha_detallerevista"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detalle_arriba_detallerevista"
                android:layout_gravity="center_horizontal"
                android:text="@string/lorem_text"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="25dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:lineSpacingExtra="8sp"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="@string/por"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/autor_detallerevista"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:ellipsize="end"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/galeria_revista_recyclerview"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <TextView
                android:id="@+id/detalle_abajo_detallerevista"
                android:layout_gravity="center_horizontal"
                android:text="@string/lorem_text"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="25dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:lineSpacingExtra="8sp"
                android:ellipsize="end"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/redessociales"
                android:textSize="15sp"
                android:textColor="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/facebook_revista"
                    android:visibility="gone"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="30dp"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:clickable="true"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:padding="15dp"
                        android:src="@drawable/facebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/whatsapp_revista"
                    android:visibility="gone"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="30dp"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:padding="15dp"
                        android:src="@drawable/whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/instagram_revista"
                    android:visibility="gone"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="30dp"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:padding="15dp"
                        android:src="@drawable/instagram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/email_revista"
                    android:visibility="gone"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="30dp"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:clickable="true"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:padding="15dp"
                        android:src="@drawable/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>