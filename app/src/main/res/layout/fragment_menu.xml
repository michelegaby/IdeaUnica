<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_publicidad_menu">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smarteist.autoimageslider.SliderLayout
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/slider_publicidad_menu" />
            <androidx.cardview.widget.CardView
                android:id="@+id/evento_menu"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="20dp"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/evento2"/>
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Eventos"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Próximos eventos."
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/revista_menu"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                app:cardElevation="0dp"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="20dp"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/periodico"/>
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Revista"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Fiestas sociales."
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/entrevista_menu"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                app:cardElevation="0dp"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="20dp"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/entrevista"/>
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Entrevistas"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Los mejores profesionales nacionales e internacionales."
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/contactanos_menu"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                app:cardElevation="0dp"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="20dp"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/enviarcorreo"/>
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Contáctanos"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Para mas informacion."
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/img_publicidad_menu"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bannerpublicidad2"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>