<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Entrevista.DetalleEntrevista">
    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/img_fondo_detalle_entrevista"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/margot2" />
    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/degradado_entrevista"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo_degradado" />
    <androidx.core.widget.NestedScrollView
        android:background="@drawable/fondo_buttom_revista"
        android:id="@+id/nest_entrevista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_marginBottom="70dp"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_fondo_detalle_entrevista"
        app:layout_constraintVertical_bias="0.072"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titulo_detalle_entrevista"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="50dp"
                android:transitionName="tituloTransition3"
                android:layout_width="280dp"
                android:text="Seiland Norway"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fecha_detalle_entrevista"
                app:layout_constraintVertical_bias="0.072" />
            <TextView
                android:id="@+id/fecha_detalle_entrevista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:maxLines="4"
                android:transitionName="fechaTransition3"
                android:ellipsize="end"
                android:text="3 AUG - 9 AUG"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txt_detalle_entrevista"
                app:layout_constraintVertical_bias="0.072" />
            <TextView
                android:id="@+id/txt_detalle_entrevista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:textColor="#000"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:text="@string/lorem_text"
                app:layout_constraintVertical_bias="0.072"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/galeria_entrevista_recyclerview" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galeria_entrevista_recyclerview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="150dp"
                android:layout_marginTop="20dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/txt_detalle_entrevista" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:tint="@color/colorblanco"
        android:id="@+id/abajo_detalle_evento"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="40dp"
        android:text="Leer menos"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_fondo_detalle_entrevista"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>