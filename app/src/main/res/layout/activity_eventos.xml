<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".menu.evento.Eventos">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Evento_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_publicidad_eventos"/>

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progress_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_publicidad_eventos"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bannerpublicidad2"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>