<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cursos.Curso">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titulo_curso"
                android:text="Grand Royale Park Hotel"
                android:textSize="40dp"
                android:textStyle="bold"
                android:transitionName="txtTransition2"
                android:textColor="#000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/costo_curso"/>
            <TextView
                android:id="@+id/costo_curso"
                android:gravity="bottom|end"
                android:text="$220"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/colorAccent"
                android:src="@drawable/posicion"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/departamento_curso"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:text="Departament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/duracion_curso"
                android:gravity="end"
                android:text="/3 días"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A8A5A5"/>
        <TextView
            android:id="@+id/informacion"
            android:text="INFORMACIÓN"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:text="Instructor/a:"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/autor_curso"
                    android:textSize="15dp"
                    android:text="Evelin Ribera!"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:text="Fecha:"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fecha_curso"
                    android:textSize="15dp"
                    android:text="25 noviembre, 2019"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:text="Horario:"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="15dp"
                    android:text="10:00 pm"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:text="Direccion"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:text="4to anillo zona no se que 4to anillo zona no se que 4to anillo zona no se que 4to anillo zona no se que"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/titulo_contacto_curso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Contacto"
                android:paddingRight="10dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="#000"
                android:gravity="left|center_vertical"
                android:drawableRight="@drawable/keyboard_arrow_up"/>
            <LinearLayout
                android:id="@+id/contacto_curso"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/phone_Curso"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_margin="10dp"
                        android:src="@drawable/phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_phone_curso"
                        android:text="+591 78006388"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/whatsapp_curso"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_margin="10dp"
                        android:src="@drawable/whatsapp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_whatsapp_curso"
                        android:text="+591 78006388"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/facebook_curso"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:src="@drawable/facebook"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/tx_facebook_curso"
                        android:text="https://www.facebook.com/decokidsdecoraciones/"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/instagram_curso"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:src="@drawable/instagram"
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_instagram_curso"
                        android:text="https://www.instagram.com/decokids_by_ns/"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/paginaweb_curso"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:src="@drawable/mundo"
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_paginaweb_curso"
                        android:text="+591 78006388"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/email_curso"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_margin="10dp"
                        android:src="@drawable/email"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_email_curso"
                        android:text="nicoli_@hotmail.com"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="CONTENIDO"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contenidos"/>
        <TextView
            android:id="@+id/contenido_curso"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:text="@string/lorem_text"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginVertical="10dp"
            android:id="@+id/galeria_curso_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
