<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cursos.Curso">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titulo_curso"
                android:textSize="40sp"
                android:textStyle="bold"
                android:transitionName="txtTransition2"
                android:textColor="#000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/costo_curso"/>
            <TextView
                android:id="@+id/costo_curso"
                android:gravity="bottom|end"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/img"
                android:tint="@color/colorAccent"
                android:src="@drawable/posicion"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/departamento_curso"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:text="@string/departamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/duracion_curso"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A8A5A5"/>
        <TextView
            android:id="@+id/informacion"
            android:text="@string/informacion"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:text="@string/instructor"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/autor_curso"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:text="@string/fechapuntos"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fecha_curso"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:text="@string/horariopuntos"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/horario_curso"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:text="@string/direccionpuntos"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/direccion_curso"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/titulo_contacto_curso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/contacto"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#000"
                android:gravity="start|center_vertical"
                android:drawableEnd="@drawable/keyboard_arrow_up"/>
            <LinearLayout
                android:id="@+id/contacto_curso"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:padding="5dp"
                    android:id="@+id/phone_Curso"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:layout_margin="10dp"
                        android:src="@drawable/phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_phone_curso"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/whatsapp_curso"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:layout_margin="10dp"
                        android:src="@drawable/whatsapp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_whatsapp_curso"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/facebook_curso"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:src="@drawable/facebook"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/tx_facebook_curso"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/instagram_curso"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:src="@drawable/instagram"
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_instagram_curso"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/paginaweb_curso"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:src="@drawable/mundo"
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_paginaweb_curso"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/email_curso"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:contentDescription="@string/img"
                        android:layout_margin="10dp"
                        android:src="@drawable/email"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tx_email_curso"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="@string/contenido"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contenidos"/>
        <TextView
            android:id="@+id/contenido_curso"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginVertical="10dp"
            android:id="@+id/galeria_curso_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
