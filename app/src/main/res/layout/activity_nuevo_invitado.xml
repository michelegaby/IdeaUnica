<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.invitados.NuevoInvitado">
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="18dp"
            android:text="Ingrese el nombre"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="textCapSentences"
            android:id="@+id/nombre_nuevo_invitado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="abcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ "
            android:hint="Nombre..." />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#4D4B4B"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Acompañantes"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Aduto/s:"
                android:textColor="#000"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginVertical="10dp"/>
            <EditText
                android:id="@+id/adulto_nuevo_invitado"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginRight="30dp"
                android:hint="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Niño/s:"
                android:textColor="#000"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginVertical="10dp"/>
            <EditText
                android:id="@+id/ninyo_nuevo_invitado"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginRight="30dp"
                android:hint="0" />
        </LinearLayout>

        <TextView
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Ingrese un numero de contacto"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/celular_nuevo_invitado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="9"
            android:digits="1234567890"
            android:singleLine="true"
            android:background="@null"
            android:hint="Celular..." />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#4D4B4B"/>

        <TextView
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Tipo"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/tipo_nuevo_invitado"
            android:entries="@array/Spinner_tipo_invitado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dialog"
            android:minHeight="50dp"
            android:textColor="#000000">
        </Spinner>
        <CheckBox
            android:id="@+id/confirmar_nuevo_invitado"
            android:text="¿Invitado Confirmado?"
            android:textSize="18dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/guardar_nuevo_invitado"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Guardar"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:background="@color/colorAccent"
            android:textColor="@color/colorblanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>