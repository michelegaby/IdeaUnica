<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Entrevista.DetalleEntrevista">
    <ImageView
        android:contentDescription="@string/img"
        android:adjustViewBounds="true"
        android:id="@+id/img_fondo_detalleentrevista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#000"/>
    <ImageView
        android:contentDescription="@string/img"
        android:adjustViewBounds="true"
        android:id="@+id/degradado_entrevista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/fondo_degradado" />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nest_entrevista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_marginBottom="70dp"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_fondo_detalleentrevista"
        app:layout_constraintVertical_bias="0.072"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombre_detalleEntrevista"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="30dp"
                android:paddingTop="50dp"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fecha_detalle_entrevista"
                app:layout_constraintVertical_bias="0.072" />
            <TextView
                android:id="@+id/biografia_detalleEntrevista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:textColor="#fff"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                app:layout_constraintVertical_bias="0.072"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/galeria_entrevista_recyclerview"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galeria_entrevista_recyclerview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="150dp"
                android:layout_marginTop="20dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/txt_detalle_entrevista" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:tint="@color/colorblanco"
        android:id="@+id/abajo_detalle_evento"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="40dp"
        android:text="@string/leer"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nest_entrevista"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>