<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorblanco"
    android:layout_width="match_parent"
    android:id="@+id/swipeRefreshLayout_evento"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titulo_evento_f"
                android:text="Hola, Â¡Estos son los proximos evento! No te los pierdas"
                android:textStyle="bold"
                android:textSize="30dp"
                android:padding="10dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/hoy_evento"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/click_uno"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:tint="#EF7B7E"
                            android:padding="5dp"
                            android:src="@drawable/hoy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txt_hoy_evento"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Hoy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/semana_evento"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/click_uno"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:tint="#EF7B7E"
                            android:padding="5dp"
                            android:src="@drawable/semana"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txt_semana_evento"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Semana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mes_evento"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/click_uno"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:tint="#EF7B7E"
                            android:padding="5dp"
                            android:src="@drawable/mes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txt_mes_evento"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Mes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/todo_evento"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/click_uno"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:tint="#EF7B7E"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/todos_los_eventos" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txt_todo_evento"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Todo"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Eventofragment_rv"
                android:layout_width="match_parent"
                android:clipToPadding="false"
                android:layout_height="420dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>